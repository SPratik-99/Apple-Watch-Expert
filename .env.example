# Environment variables for Apple Watch RAG Chatbot
# Copy this to .env and fill in your values

# Choose your LLM provider (groq or ollama)
LLM_TYPE=groq

# Groq Configuration (free API - recommended)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama Configuration (local - alternative)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Embedding model (free)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Paths
CHROMA_DB_PATH=./data/chroma_db
DOCS_PATH=./data/apple_watch_docs
COLLECTION_NAME=apple_watch_docs

# Document processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG settings
RETRIEVAL_K=5
MAX_HISTORY_LENGTH=10